---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import { SITE_DESC } from '../consts';

const {pageTitle} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-32x32.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={SITE_DESC} />
		<meta name="author" content="Alex Leye" />
		<link rel="canonical" href={Astro.url} />
		<meta name="language" content="en" />

		<!-- Katex -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.22/dist/katex.min.css" integrity="sha384-5TcZemv2l/9On385z///+d7MSYlvIEw9FuZTIdZ14vJLqWphw7e7ZPuOiCHJcFCP" crossorigin="anonymous">
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={SITE_DESC} />
		<meta property="og:image" content="https://www.alexleye.com/bonsai-tree-s.webp" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={pageTitle} />
		<meta property="twitter:description" content={SITE_DESC} />
		<meta property="twitter:image" content="https://www.alexleye.com/bonsai-tree-s.webp" />
		
		<title>{pageTitle}</title>
		
		<!-- Theme initialization to prevent FOUC -->
		<script is:inline>
			const storedTheme = localStorage.getItem("theme");
			const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
			const theme = storedTheme || (systemPrefersDark ? "dark" : "light");
			
			if (theme === "dark") {
				document.documentElement.classList.add("dark");
				document.documentElement.setAttribute("data-theme", "dracula");
			} else {
				document.documentElement.setAttribute("data-theme", "github-dark");
			}
		</script>
		
		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "ProfilePage",
				"name": "Alex Leye - Backend Software Engineer",
				"url": "https://www.alexleye.com",
				"image": "https://www.alexleye.com/bonsai-tree-s.webp",
				"description": "Backend Software Engineer based in Melbourne, Australia specializing in high-performance API microservices on AWS cloud services.",
				"mainEntity": {
					"@type": "Person",
					"name": "Alex Leye",
					"jobTitle": "Backend Software Engineer",
					"url": "https://www.alexleye.com",
					"sameAs": [
						"https://github.com/anley1",
						"https://www.linkedin.com/in/alex-leye/"
					],
					"image": "https://www.alexleye.com/bonsai-tree-s.webp",
					"knowsAbout": ["Backend Development", "AWS", "Microservices", "API Design", "Software Engineering"],
					"alumniOf": {
						"@type": "Organization",
						"name": "Monash University"
					},
					"address": {
						"@type": "Place",
						"addressLocality": "Melbourne",
						"addressCountry": "Australia"
					}
				}
			}
		</script>
		
		<!-- Article Structured Data (if on a blog post) -->
		{Astro.props.frontmatter && (
			<script type="application/ld+json">
				{
					"@context": "https://schema.org",
					"@type": "Article",
					"headline": Astro.props.frontmatter.title,
					"description": Astro.props.frontmatter.description,
					"author": {
						"@type": "Person",
						"name": Astro.props.frontmatter.author || "Alex Leye"
					},
					"datePublished": Astro.props.frontmatter.pubDate.toISOString(),
					"dateModified": Astro.props.frontmatter.updatedDate?.toISOString() || Astro.props.frontmatter.pubDate.toISOString(),
					"publisher": {
						"@type": "Person",
						"name": "Alex Leye"
					},
					"mainEntityOfPage": {
						"@type": "WebPage",
						"@id": Astro.url
					},
					"image": "https://www.alexleye.com/bonsai-tree-s.webp"
				}
			</script>
		)}

		<!-- Google Analytics -->
		<meta name="google-site-verification" content="7D082XiKh1jKRqrv_KcvSzpl-dGugaJrh5jZ9S7UviY" />
		

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-5X87N9WPW6"></script>
		<script is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-5X87N9WPW6');
		</script>

		
		<!-- Preload images -->
		<link rel="preload" as="image" href="/working-s.webp" />
		<link rel="preload" as="image" href="/mahjong-white-dragon.webp" />
		<link rel="preload" as="image" href="/bonsai-tree-s.webp" />
		<link rel="preload" as="image" href="/plato.webp" />
		
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
