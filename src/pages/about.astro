---
import '../styles/global.css';

const pageTitle = "About me";

const myIdentity = {
	firstName: "Alex",
	lastName: "Leye",
	country: "Australia",
	occupation: "Software Engineer",
	hobbies: ["photography", "movies", "travelling", "cuisine"]
}

const skills = ["JavaScript", "Python", "React", "Astro", "Netlify"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "lowercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
				color: purple;
				font-size: 4rem;
			}
			.skill {
				color: (--skillColor);
				font-weight: (--fontWeight);
				text-transform: (--textCase);
			}
		</style>
	</head>
	<body>
		<a href="/">Home</a>
		<a href="/about/">About</a>
		<a href="/blog/">Blog</a>
		<h1>About</h1>
		<p>Here are some details about me:</p>
		<ul>
			<li>My name is {myIdentity.firstName}.</li>
			<li>I live in {myIdentity.country} and I work as a {myIdentity.occupation}.</li>
			{myIdentity.hobbies.length >= 2 &&
			  <li>Two of my hobbies are: {myIdentity.hobbies[0]} and {myIdentity.hobbies[1]}</li>
			}
		</ul>
		<ul>
			<p>My skills are</p>
			{skills.map(i => <li class="skill">{i}</li>)}
		</ul>
	</body>
</html>
